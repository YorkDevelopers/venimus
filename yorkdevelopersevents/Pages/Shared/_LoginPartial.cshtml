@using Microsoft.AspNetCore.Identity

    <ul class="navbar-nav">
        @if (User.Identity.IsAuthenticated)
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/MyGroups">My Groups</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="" asp-page="/MyEvents">My Events</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Logout">Logout</a>
            </li>
            <li class="nav-item">
                <a class="nav-link text-dark" asp-area="Identity" asp-page="/Me" title="Manage"><img class="profile-image" src="@User.FindFirst("ProfilePictureURL").Value"></a>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-dark" asp-page="/Login">Login/Register</a>
            </li>
        }
    </ul>
